@require "vars"

.rd-schema-object
    display inline-block
    vertical-align top

.rd-schema-array
    display inline-block
    vertical-align top

.rd-schema-description
    color $secondary-text-color
    max-width 350px
    white-space normal

.rd-schema-properties
    display inline-block
    vertical-align top

.rd-schema-property
    margin-bottom 8px

.rd-schema-propertyKey
    color $code-property-color

.rd-schema-type
    color $type-color

.rd-schema-primitive
    display inline-block
    vertical-align top

.rd-schema-definition
    overflow-x auto
    font-family $code-font
    background $code-background
    color $regular-text-color
    padding 8px 10px
    border 1px solid $border-color

.rd-schema-optional
    font-size 12px
    font-style italic